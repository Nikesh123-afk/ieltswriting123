// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  essays        Essay[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

model Essay {
  id          String   @id @default(cuid())
  userId      String
  taskType    String
  module      String
  prompt      String
  essay       String
  wordCount   Int
  submittedAt DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  result      Result?
  
  @@index([userId])
}

model Result {
  id                 String   @id @default(cuid())
  essayId            String   @unique
  overallBand        Float
  taskAchievement    Float
  coherenceCohesion  Float
  lexicalResource    Float
  grammaticalRange   Float
  executiveSummary   String
  criteriaFeedback   String   // JSON string
  highlightedIssues  String   // JSON string
  revisionPlan       String   // JSON string
  educatorNotes      String?
  createdAt          DateTime @default(now())
  
  essay              Essay    @relation(fields: [essayId], references: [id], onDelete: Cascade)
}
